{
	"name": "Existing Docker Compose (Extend)",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "php",
	"workspaceFolder": "/var/www/html",
	"customizations": {
		"vscode": {
			"extensions": [
				"mikestead.dotenv",
                "DEVSENSE.phptools-vscode"
			],
			"settings": {}
		}
	},
	"remoteUser": "dev",
	"postCreateCommand": "chown -R 1000:1000 /var/www/html 2>/dev/null || true"
}
